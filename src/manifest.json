{
  "manifest_version": 2,
  "name": "Manga Downloader",
  "author": "Ilya Stupakov",
  "version": "1.3.1",
  "version_name": "1.3.1",
  "description": "Download manga chapters to zip archives",
  "icons": {"128": "manga.png"},
  "permissions": ["activeTab", "downloads", "webNavigation", "http://*/"],
  "background": {
    "scripts": ["manga.js", "background.js"],
    "persistent": false
  },
  "page_action": {
    "default_name": "Manga Downloader",
    "default_icon": "download.png",
    "default_popup": "popup.html"
  }  
}
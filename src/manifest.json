{
  "manifest_version": 2,
  "name": "Manga Downloader",
  "version": "1.0.0",
  "version_name": "1.0 beta",
  "description": "Download manga chapters to zip archives",
  "icons": {"128": "manga.png"},
  "permissions": ["activeTab", "downloads", "webNavigation", "http://*/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_name": "Manga Downloader",
    "default_icon": "download.png",
    "default_popup": "manga.html"
  }  
}